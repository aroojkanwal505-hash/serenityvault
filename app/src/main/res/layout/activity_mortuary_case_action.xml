<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/light_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Case Action Required"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/mortuary_color"
            android:gravity="center"
            android:layout_marginBottom="20dp"/>

        <!-- Case Details -->
        <TextView
            android:id="@+id/tvCaseDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading case details..."
            android:textSize="16sp"
            android:background="@color/white"
            android:padding="16dp"
            android:elevation="2dp"
            android:layout_marginBottom="20dp"/>

        <!-- Slot Selection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Available Slot:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>

        <Spinner
            android:id="@+id/spinnerSlots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:layout_marginBottom="20dp"/>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btnReject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reject Case"
                android:textSize="16sp"
                android:backgroundTint="@color/error"
                android:textColor="@color/white"
                android:layout_marginEnd="10dp"
                android:padding="12dp"/>

            <Button
                android:id="@+id/btnAccept"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Accept and Reserve Slot"
                android:textSize="16sp"
                android:backgroundTint="@color/success"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                android:padding="12dp"/>

        </LinearLayout>

        <!-- Slot Reservation Info -->
        <TextView
            android:id="@+id/tvReservationInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Slot will be reserved for 2 days"
            android:textSize="14sp"
            android:textColor="@color/text_light"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:padding="10dp"/>

    </LinearLayout>
</ScrollView>